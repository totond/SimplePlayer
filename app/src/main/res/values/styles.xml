<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainButtonText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>
    
    <style name="AudioListSongNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AudioListSingerNameText">
        <item name="android:textColor">@color/colorSlateGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AudioListDurationText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AudioListTitleText">
        <item name="android:textColor">@color/colorFireBrick</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AudioListEditText">
        <item name="android:textColor">@color/colorLightSlateGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

        <!--<item name="android:layout_weight">50dp</item>-->
        <!--<item name="android:layout_height">50dp</item>-->
    <style name="AudioControlBarButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/background_btn</item>
    </style>
    
    <style name="AlarmItemNameText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@drawable/background_alarm_text</item>
    </style>

    <style name="AlarmItemContentText">
        <item name="android:textSize">18sp</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@drawable/background_alarm_text</item>
    </style>
</resources>
