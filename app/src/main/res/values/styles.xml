<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AudioListSongNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AudioListSingerNameText">
        <item name="android:textColor">@color/colorSlateGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AudioListDurationText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AudioListTitleText">
        <item name="android:textColor">@color/colorFireBrick</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AudioListEditText">
        <item name="android:textColor">@color/colorLightSlateGrey</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
